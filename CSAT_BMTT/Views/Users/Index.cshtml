@model CSAT_BMTT.Models.UsersViewModel

@{
    ViewData["Title"] = "User List";
}

<h1 class="text-center fw-bold pt-3">Danh sách người dùng</h1>

<div class="row justify-content-center mt-4">
    <div class="col-md-4">
        <div class="card shadow-lg p-3 border border-1 rounded-3 bg-light text-dark">
            <div class="card-header d-flex justify-content-between align-items-center bg-dark text-white rounded-top">
                <h5 class="mb-0">Thông tin cá nhân</h5>
                <button class="btn btn-outline-light btn-sm" data-bs-toggle="modal" data-bs-target="#pinModal">
                    <i class="bi bi-pencil-square"></i> Sửa
                </button>
                @* <a asp-controller="Users" asp-action="Edit" asp-route-id="@Model.CurrentUser?.Id" class="btn btn-outline-light btn-sm">
                    <i class="bi bi-pencil-square"></i> Sửa
                    <i class="bi bi-pencil-square"></i> Sửa
                    </button>
                </a> *@
            </div>
            <div class="card-body">
                <p><strong>CCCD:</strong> @Model.CurrentUser?.CitizenIdentificationNumber</p>
                <p><strong>Email:</strong> @Model.CurrentUser?.Name</p>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <form asp-controller="Users" asp-action="Index" method="get" class="mb-3">
            <div class="input-group">
                <input type="text" name="SearchString" class="form-control border-dark" placeholder="Tìm kiếm..." />
                <button type="submit" class="btn btn-dark">Tìm</button>
            </div>
        </form>

        <div class="shadow-lg border rounded-3 bg-light p-2" style="max-height: 450px; overflow-y: auto;">
            <table class="table table-bordered table-hover text-dark mb-0">
                <thead class="table-dark text-white">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.UsersList[0].CitizenIdentificationNumber)</th>
                        <th>@Html.DisplayNameFor(model => model.UsersList[0].Name)</th>
                        <th>@Html.DisplayNameFor(model => model.UsersList[0].Email)</th>
                        <th>@Html.DisplayNameFor(model => model.UsersList[0].Birthday)</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.UsersList)
                    {
                        <tr>
                            <td>@item.CitizenIdentificationNumber</td>
                            <td>@item.Name</td>
                            <td>
                                @(item.Email.Length > 8 ? item.Email.Substring(0, 8) + "..." : item.Email)
                            </td>
                            <td>
                                @(item.Birthday.ToString().Length > 8 ? item.Birthday.ToString().Substring(0, 8) + "..." : item.Birthday.ToString())
                            </td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-dark btn-sm">
                                    <i class="bi bi-eye"></i> Xem
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="pinModal" tabindex="-1" aria-labelledby="pinModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="pinModalLabel">Nhập mã PIN</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form id="pinForm" asp-controller="Users" asp-action="Edit" asp-route-id="@Model.CurrentUser?.Id" method="get">
                <input type="hidden" name="id" value="@Model.CurrentUser?.Id" />
                <input type="password" name="pinCode" id="pinCode" class="form-control" placeholder="Nhập mã PIN" maxlength="6">
            </form>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="submit" class="btn btn-primary" form="pinForm">Xác nhận</button>
            </div>
        </div>
    </div>
</div>