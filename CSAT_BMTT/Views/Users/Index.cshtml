@model CSAT_BMTT.Models.UsersViewModel

@{
    ViewData["Title"] = "User List";
}

<h1 class="text-center fw-bold pt-3">Danh sách người dùng</h1>

<div class="row justify-content-center mt-4">
    <div class="col-md-4">
        <div class="card shadow-lg p-3 border border-1 rounded-3 bg-light text-dark">
            <div class="card-header d-flex justify-content-between align-items-center bg-dark text-white rounded-top">
                <h5 class="mb-0">Thông tin cá nhân</h5>
                <a asp-controller="Users" asp-action="Edit" asp-route-id="@Model.CurrentUser?.Id" class="btn btn-outline-light btn-sm">
                    <i class="bi bi-pencil-square"></i> Sửa
                </a>
            </div>
            <div class="card-body">
                <p><strong>Tên:</strong> @Model.CurrentUser?.Name</p>
                <p><strong>Email:</strong> @Model.CurrentUser?.Email</p>
                <p><strong>Số điện thoại:</strong> @Model.CurrentUser?.PhoneNumber</p>
                <p><strong>Địa chỉ:</strong> @Model.CurrentUser?.Adress</p>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <form asp-controller="Users" asp-action="Index" method="get" class="mb-3">
            <div class="input-group">
                <input type="text" name="SearchString" class="form-control border-dark" placeholder="Tìm kiếm..." />
                <button type="submit" class="btn btn-dark">Tìm</button>
            </div>
        </form>

        <div class="shadow-lg border rounded-3 bg-light p-2" style="max-height: 450px; overflow-y: auto;">
            <table class="table table-bordered table-hover text-dark mb-0">
                <thead class="table-dark text-white">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.UsersList[0].CitizenIdentificationNumber)</th>
                        <th>@Html.DisplayNameFor(model => model.UsersList[0].Name)</th>
                        <th>@Html.DisplayNameFor(model => model.UsersList[0].Email)</th>
                        <th>@Html.DisplayNameFor(model => model.UsersList[0].Birthday)</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.UsersList)
                    {
                        <tr>
                            <td>@item.CitizenIdentificationNumber.ToString()</td>
                            <td>@item.Name</td>
                            <td>@item.Email</td>
                            <td>@item.Birthday.ToString("yyyy-MM-dd")</td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-dark btn-sm">
                                    <i class="bi bi-eye"></i> Xem
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
