@model CSAT_BMTT.Models.UsersViewModel

@{
    ViewData["Title"] = "User List";
}

<h1 class="text-center fw-bold pt-3"></h1>

<div class="row justify-content-center mt-4">
    <div class="col-md-4">
        <div class="card shadow-lg p-3 border border-1 rounded-3 bg-light text-dark">
            <div class="card-header d-flex justify-content-between align-items-center bg-dark text-white rounded-top">
                <h5 class="mb-0">Personal Information</h5>
                <button class="btn btn-outline-light btn-sm" data-bs-toggle="modal" data-bs-target="#editPinModal">
                    <i class="bi bi-pencil-square"></i> Edit
                </button>
            </div>
            <div class="card-body">
                <p><strong>Citizen ID:</strong> @Model.CurrentUser?.CitizenIdentificationNumber</p>
                <p><strong>Name:</strong> @Model.CurrentUser?.Name</p>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="row mb-3 align-items-center">
            <div class="col-md-5">
                <form asp-controller="Users" asp-action="Index" method="get">
                    <div class="input-group">
                        <input type="text" name="SearchString" class="form-control border-dark" placeholder="Search by name..." />
                        <button type="submit" class="btn btn-dark">Search</button>
                    </div>
                </form>
            </div>
            <div class="col-md-3"></div>
            <div class="d-flex col-md-4 text-end">
                <button type="button" class="btn btn-outline-dark btn-sm me-3" data-bs-toggle="modal" data-bs-target="#showApprovedUsersModal">
                    <i class="bi bi-eye"></i> Show Approved Users
                </button>
                <a asp-action="RequestList" asp-controller="AccessPermissions" class="btn btn-outline-dark btn-sm">
                    <i class="bi bi-eye"></i> Request List
                </a>
            </div>
        </div>


        <div class="shadow-lg border rounded-3 bg-light p-2" style="max-height: 450px; overflow-y: auto;">
            <table class="table table-bordered table-hover text-dark mb-0">
                <thead class="table-dark text-white">
                    <tr>
                        <th>#</th>
                        <th>@Html.DisplayNameFor(model => model.UsersList[0].CitizenIdentificationNumber)</th>
                        <th>@Html.DisplayNameFor(model => model.UsersList[0].Name)</th>
                        <th>@Html.DisplayNameFor(model => model.UsersList[0].Email)</th>
                        <th>@Html.DisplayNameFor(model => model.UsersList[0].Birthday)</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int index = 1;
                    }
                    @foreach (var item in Model.UsersList)
                    {
                        <tr>
                            <td>@index</td>
                            <td>@item.CitizenIdentificationNumber</td>
                            <td>@item.Name</td>
                            <td>
                                @(item.Email.Length > 8 ? item.Email.Substring(0, 8) + "..." : item.Email)
                            </td>
                            <td>
                                @(item.Birthday.ToString().Length > 8 ? item.Birthday.ToString().Substring(0, 8) + "..." : item.Birthday.ToString())
                            </td>
                            <td class="text-center">
                                <button class="btn btn-outline-dark btn-sm details-btn" data-user-id="@item.Id">
                                    <i class="bi bi-eye"></i> Details
                                </button>
                            </td>
                        </tr>
                        index++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="editPinModal" tabindex="-1" aria-labelledby="editPinModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editPinModalLabel">PIN Code</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form id="editPinForm" asp-controller="Users" asp-action="EditPin" asp-route-id="@Model.CurrentUser?.Id" method="post">
                <div class="modal-body">
                    <input type="hidden" name="id" value="@Model.CurrentUser?.Id" />
                    <input type="password" name="pinCode" class="form-control" placeholder="Enter PIN Code" maxlength="6" required>
                </div>
            </form>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary" form="editPinForm">Proceed</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="showApprovedUsersModal" tabindex="-1" aria-labelledby="showApprovedUsersModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="showApprovedUsersModalLabel">PIN Code</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form id="showApprovedUsersForm" asp-controller="Users" asp-action="Index" method="get">
                <div class="modal-body">
                    <input type="hidden" name="SearchString" id="searchStringInput">
                    <input type="password" name="pinCode" class="form-control" placeholder="Enter PIN Code" maxlength="6" required>
                </div>
            </form>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary" form="showApprovedUsersForm">Proceed</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="enterPinModal" tabindex="-1" aria-labelledby="enterPinModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">PIN Code</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form id="verifyPinForm" asp-controller="Users" asp-action="ApprovedDetails" method="post">
                <div class="modal-body">
                    <input type="hidden" name="approverId" id="approverId">
                    <input type="password" name="pinCode" class="form-control" placeholder="Enter PIN Code" maxlength="6" required>
                </div>
            </form>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary" form="verifyPinForm">Proceed</button>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll(".details-btn").forEach(button => {
            button.addEventListener("click", function (event) {
                event.preventDefault();

                let userId = this.dataset.userId;

                fetch("./Users/check-pin-requirement", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ userId })
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.requiresPin) {
                            document.getElementById("approverId").value = userId;
                            let pinModal = new bootstrap.Modal(document.getElementById("enterPinModal"));
                            pinModal.show();
                        } else {
                            window.location.href = `./Users/Details/${userId}`;
                        }
                    })
                    .catch(error => console.error("Error:", error));
            });
        });
    });
</script>