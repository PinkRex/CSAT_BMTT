@model CSAT_BMTT.Models.User

@{
    ViewData["Title"] = "User Details";
}

<h2 class="text-center fw-bold pt-3">User Details</h2>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg p-4 border border-1" style="background-color: #fff; color: #000;">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="CitizenIdentificationNumber" class="form-label fw-bold"></label>
                                    <input value="@Model.CitizenIdentificationNumber" class="form-control border-dark" readonly />
                                    <span asp-validation-for="CitizenIdentificationNumber" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <label asp-for="Name" class="form-label fw-bold"></label>
                                    <input value="@Model.Name" class="form-control border-dark" readonly />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <label asp-for="Email" class="form-label fw-bold"></label>
                                    <input value="@Model.Email" class="form-control border-dark" readonly />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <label asp-for="Birthday" class="form-label fw-bold"></label>
                                    <input value="@Model.Birthday" class="form-control border-dark" readonly />
                                    <span asp-validation-for="Birthday" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Adress" class="form-label fw-bold"></label>
                                    <input value="@Model.Adress" class="form-control border-dark" readonly />
                                    <span asp-validation-for="Adress" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <label asp-for="PhoneNumber" class="form-label fw-bold"></label>
                                    <input value="@Model.PhoneNumber" class="form-control border-dark" readonly />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <label asp-for="ATM" class="form-label fw-bold"></label>
                                    <input value="@Model.ATM" class="form-control border-dark" readonly />
                                    <span asp-validation-for="ATM" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-outline-dark">
                            <i class="bi bi-arrow-left"></i> Back To List
                        </a>
                        <form class="me-3 ms-3" asp-controller="AccessPermissions" asp-action="CreatePermissionRequest" method="post">
                            <input type="hidden" name="targetId" value="@Model.Id" />
                            <button type="submit" class="btn btn-dark">Request Permission</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>