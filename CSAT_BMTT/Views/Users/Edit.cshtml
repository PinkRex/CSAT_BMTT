@model CSAT_BMTT.Models.User

@{
    ViewData["Title"] = "Chỉnh sửa thông tin";
}

<h2 class="text-center fw-bold pt-3">Chỉnh sửa thông tin người dùng</h2>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg p-4 border border-1" style="background-color: #fff; color: #000;">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="StaticKey" />
                        <input type="hidden" asp-for="IvKey" />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="CitizenIdentificationNumber" class="form-label fw-bold"></label>
                                    <input asp-for="CitizenIdentificationNumber" class="form-control border-dark" readonly />
                                    <span asp-validation-for="CitizenIdentificationNumber" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <label asp-for="Name" class="form-label fw-bold"></label>
                                    <input asp-for="Name" class="form-control border-dark" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <label asp-for="Email" class="form-label fw-bold"></label>
                                    <input asp-for="Email" class="form-control border-dark" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <label asp-for="Birthday" class="form-label fw-bold"></label>
                                    <input asp-for="Birthday" type="date" class="form-control border-dark" />
                                    <span asp-validation-for="Birthday" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Adress" class="form-label fw-bold"></label>
                                    <input asp-for="Adress" class="form-control border-dark" />
                                    <span asp-validation-for="Adress" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <label asp-for="PhoneNumber" class="form-label fw-bold"></label>
                                    <input asp-for="PhoneNumber" class="form-control border-dark" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <label asp-for="ATM" class="form-label fw-bold"></label>
                                    <input asp-for="ATM" class="form-control border-dark" />
                                    <span asp-validation-for="ATM" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Nút hành động -->
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-dark">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-dark">
                                <i class="bi bi-save"></i> Lưu thay đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
