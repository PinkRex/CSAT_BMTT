@model RequestViewModel

@{
    ViewData["Title"] = "Request List";
}

<h2 class="my-3">@ViewData["Title"]</h2>

<div class="card shadow-lg p-3">
    <ul class="nav nav-tabs" id="dataTabs">
        <li class="nav-item">
            <a class="nav-link active" id="tab1-tab" data-bs-toggle="tab" href="#tab1">Request Sent</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="tab2-tab" data-bs-toggle="tab" href="#tab2">Request Received</a>
        </li>
    </ul>

    <div class="tab-content mt-3">
        <div class="tab-pane fade show active" id="tab1">
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>Citizen ID</th>
                            <th>Name</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.RequestSentList)
                        {
                            <tr>
                                <td>@item.CitizenIdentificationNumber</td>
                                <td>@item.CitizenName</td>
                                <td>@item.Status</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="tab-pane fade" id="tab2">
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>Citizen ID</th>
                            <th>Name</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.RequestRecievedList)
                        {
                            <tr>
                                <td>@item.CitizenIdentificationNumber</td>
                                <td>@item.CitizenName</td>
                                <td>@item.Status</td>
                                <td>
                                    <a asp-action="" asp-route-id="@item.Id" class="btn btn-outline-dark btn-sm">
                                        <i class="bi bi-eye"></i> Decline
                                    </a>
                                    <a asp-action="" asp-route-id="@item.Id" class="btn btn-dark btn-sm">
                                        <i class="bi bi-eye"></i> Approve
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
<script>
    const connection = new signalR.HubConnectionBuilder()
        .withUrl("/permissionHub")
        .build();

    connection.start().then(() => {
        console.log("SignalR Connected");
    });

    connection.on("UpdateRequests", () => {
        console.log("In UpdateRequests");
        updateRequestList();
    });

    function updateRequestList() {
        $.ajax({
            url: "/api/accesspermissions/requests/data",
            type: "GET",
            dataType: "json",
            success: function (data) {
                let requestReceivedList = Object.values(data);
                $("#tab2 tbody").empty();
                if (Array.isArray(requestReceivedList) && requestReceivedList.length > 0) {
                    requestReceivedList.forEach(request => {
                        $("#tab2 tbody").append(`
                            <tr>
                                <td>${request.citizenIdentificationNumber}</td>
                                <td>${request.citizenName}</td>
                                <td>${request.status}</td>
                            </tr>
                        `);
                    });
                } else {
                    console.error("requestReceivedList is missing or not an array:", data);
                }
            },
            error: function (jqXHR, textStatus, errorThrown) {
                console.error("API request failed:", textStatus, errorThrown);
            }
        });
    }
</script>
